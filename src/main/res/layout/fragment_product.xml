<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/product_desc"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:gravity="center"
        android:textColor="@color/teal_500"
        android:textSize="@dimen/text_18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_product"
        android:layout_marginLeft="@dimen/margin_64dp"
        android:layout_marginStart="@dimen/margin_64dp"
        android:orientation="vertical">

        <RatingBar
            android:id="@+id/bar_satisfaction"
            style="@style/AppTheme.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false" />

        <TextView
            android:id="@+id/tv_satisfaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/teal_500"
            android:textSize="@dimen/text_12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_product"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_64dp"
        android:layout_marginRight="@dimen/margin_64dp"
        android:drawableTop="@mipmap/ic_language"
        android:textColor="@color/teal_500"
        android:textSize="@dimen/text_12sp" />

    <TextView
        android:id="@+id/tv_statement"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="@dimen/text_22sp"
        android:textStyle="bold" />
</RelativeLayout>