<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_rice"
    tools:context="com.baculsoft.mdk.mobile.activity.MainActivity">

    <include
        android:id="@+id/app_toolbar"
        layout="@layout/toolbar_app" />

    <ImageButton
        android:id="@+id/btn_like"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/fab_size"
        android:layout_marginStart="@dimen/margin_large"
        android:background="@drawable/btn_fab_like"
        android:contentDescription="@string/btn_like_desc"
        android:elevation="@dimen/elevation_large"
        android:src="@mipmap/ic_like"
        android:textSize="@dimen/text_xxlarge" />

    <ImageButton
        android:id="@+id/btn_dislike"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/fab_size"
        android:layout_marginEnd="@dimen/margin_large"
        android:background="@drawable/btn_fab_dislike"
        android:contentDescription="@string/btn_dislike_desc"
        android:elevation="@dimen/elevation_large"
        android:src="@mipmap/ic_dislike"
        android:textSize="@dimen/text_xxlarge" />
</RelativeLayout>