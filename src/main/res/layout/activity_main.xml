<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sikerang.mobile.activity.MainActivity">

    <include
        android:id="@+id/app_toolbar"
        layout="@layout/toolbar_app" />

    <Button
        android:id="@+id/btn_like"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_fab_like"
        android:contentDescription="@string/btn_murah_desc"
        android:elevation="8dp"
        android:text="@string/btn_murah"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_dislike"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_fab_dislike"
        android:contentDescription="@string/btn_mahal_desc"
        android:elevation="8dp"
        android:text="@string/btn_mahal"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</RelativeLayout>