<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomViewPagerIndicator</item>
    </style>

    <style name="AppTheme.Base.Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/grey_100</item>
    </style>

    <style name="AppTheme.Base.RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@mipmap/ic_thumb</item>
        <item name="android:indeterminateDrawable">@mipmap/ic_thumb</item>
        <item name="android:minHeight">@dimen/size_40dp</item>
        <item name="android:maxHeight">@dimen/size_40dp</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="CustomViewPagerIndicator">
        <item name="fillColor">@color/teal_500</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/size_1dp</item>
        <item name="radius">@dimen/size_5dp</item>
        <item name="pageColor">@color/grey_100</item>
    </style>
</resources>